% 1: Funktion Name
% 2: dx
% 3: dx^2
% 4: x_1
% 5: x_2
% 5: x_3
\NewDocumentCommand{\gpp}{ O{} O{\dx} O{\dx[2]} O{x} O{x} O{x} }{%
    \frac{1}{#3}
    \kl{#1 
        \kl{#4 \ifthenelse{\equal{#2}{}}{}{+ #2}} - 
        2 \cdot #1\kl{#5} +
        #1 \kl{#6\ifthenelse{\equal{#2}{}}{}{- #2}}
    }
}

% 1: x_1
% 2: x_2
% 3: x_3
% 4: dx^2
\NewDocumentCommand{\gppn}{ O{x_1} O{x_2} O{x_3} O{?}}{%
    \frac{1}{#4}
    \kl{#1 - 2 \cdot #2 + #3}
}

